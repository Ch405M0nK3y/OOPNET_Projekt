<UserControl x:Class="WPFProjekt.PlayerUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFProjekt"
             mc:Ignorable="d" MaxHeight="70" MaxWidth="80">
    <Grid>
        <Image Source="Resources\najboljiigrac.jpg" Stretch="UniformToFill" VerticalAlignment="Top" x:Name="imgPlayer"/>
        <TextBlock Text="Milica Krmpotic" Foreground="White" TextWrapping="Wrap" VerticalAlignment="Bottom" HorizontalAlignment="Center" x:Name="lblName"/>
        <Button Background="Transparent" Click="PlayerUserControlOpenPlayerInfo_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <ContentPresenter />
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</UserControl>
